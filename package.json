{
  "name": "microfrontend-app",
  "version": "1.0.0",
  "private": true,
  "description": "Microfrontend application with Module Federation",
  "workspaces": [
    "host-app",
    "characters-rick-and-morty",
    "characters-harry-potter"
  ],
  "scripts": {
    "build": "cd characters-rick-and-morty && npm run build && cd ../characters-harry-potter && npm run build && cd ../host-app && npm run build",
    "clean": "rm -rf node_modules host-app/node_modules characters-rick-and-morty/node_modules characters-harry-potter/node_modules",
    "docker:down": "docker-compose down",
    "docker:up": "docker-compose up --build",
    "install-all": "cd host-app && npm install && cd ../characters-rick-and-morty && npm install && cd ../characters-harry-potter && npm install",
    "setup": "./setup.sh",
    "start": "concurrently \"npm run start:rick\" \"npm run start:harry\" \"npm run start:host\"",
    "start:harry": "cd characters-harry-potter && npm start",
    "start:host": "cd host-app && npm start",
    "start:rick": "cd characters-rick-and-morty && npm start",
    "preinstall": "npx npm-force-resolutions"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@jest/globals": "latest",
    "@module-federation/enhanced": "latest",
